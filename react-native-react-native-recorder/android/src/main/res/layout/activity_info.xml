<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				  xmlns:tools="http://schemas.android.com/tools"
				  android:orientation="vertical"
				  android:layout_width="match_parent"
				  android:layout_height="match_parent">

	<LinearLayout
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

		<ImageButton
				android:id="@+id/btn_back"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:contentDescription="@null"
				android:layout_gravity="start"
				android:background="?android:selectableItemBackgroundBorderless"
				android:padding="@dimen/spacing_normal"
				android:src="@drawable/ic_arrow_back"/>

		<TextView
				style="@style/Text.SectionLabel"
				android:id="@+id/txt_title"
				android:layout_width="0dp"
				android:layout_height="@dimen/toolbar_height"
				android:layout_weight="1"
				android:gravity="center_vertical"
				android:paddingStart="@dimen/spacing_normal"
				android:paddingLeft="@dimen/spacing_normal"
				android:paddingEnd="@dimen/spacing_normal"
				android:paddingRight="@dimen/spacing_normal"
				android:textColor="@color/text_primary_light"
				android:text="@string/info"
				/>

	</LinearLayout>

	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/rec_name"
			android:textStyle="normal"
			android:fontFamily="sans-serif-light"
			android:textSize="@dimen/text_medium"
			android:layout_marginTop="@dimen/spacing_normal"
			android:layout_marginStart="@dimen/spacing_normal"
			android:layout_marginEnd="@dimen/spacing_normal"
			/>
	<TextView
			android:id="@+id/txt_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="start"
			android:textColor="@color/text_primary_light"
			android:layout_marginStart="@dimen/spacing_normal"
			android:layout_marginEnd="@dimen/spacing_normal"
			android:textSize="@dimen/text_large"
			tools:text="Record-12"/>

	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/rec_format"
			android:textStyle="normal"
			android:fontFamily="sans-serif-light"
			android:textSize="@dimen/text_medium"
			android:layout_marginTop="@dimen/spacing_normal"
			android:layout_marginStart="@dimen/spacing_normal"
			android:layout_marginEnd="@dimen/spacing_normal"
			/>
	<TextView
			android:id="@+id/txt_format"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="start"
			android:textColor="@color/text_primary_light"
			android:layout_marginStart="@dimen/spacing_normal"
			android:layout_marginEnd="@dimen/spacing_normal"
			android:textSize="@dimen/text_large"
			tools:text="Wav"/>

	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/rec_duration"
			android:textStyle="normal"
			android:fontFamily="sans-serif-light"
			android:textSize="@dimen/text_medium"
			android:layout_marginTop="@dimen/spacing_normal"
			android:layout_marginStart="@dimen/spacing_normal"
			android:layout_marginEnd="@dimen/spacing_normal"
			/>
	<TextView
			android:id="@+id/txt_duration"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="start"
			android:textColor="@color/text_primary_light"
			android:layout_marginStart="@dimen/spacing_normal"
			android:layout_marginEnd="@dimen/spacing_normal"
			android:textSize="@dimen/text_large"
			tools:text="12:23"/>

	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/rec_size"
			android:textStyle="normal"
			android:fontFamily="sans-serif-light"
			android:textSize="@dimen/text_medium"
			android:layout_marginTop="@dimen/spacing_normal"
			android:layout_marginStart="@dimen/spacing_normal"
			android:layout_marginEnd="@dimen/spacing_normal"
			/>
	<TextView
			android:id="@+id/txt_size"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="start"
			android:textColor="@color/text_primary_light"
			android:layout_marginStart="@dimen/spacing_normal"
			android:layout_marginEnd="@dimen/spacing_normal"
			android:textSize="@dimen/text_large"
			tools:text="12.23Mb"/>

	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/rec_location"
			android:textStyle="normal"
			android:fontFamily="sans-serif-light"
			android:textSize="@dimen/text_medium"
			android:layout_marginTop="@dimen/spacing_small"
			android:layout_marginStart="@dimen/spacing_normal"
			android:layout_marginEnd="@dimen/spacing_normal" />
	<TextView
			android:id="@+id/txt_location"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="start"
			android:textColor="@color/text_primary_light"
			android:layout_marginStart="@dimen/spacing_normal"
			android:layout_marginEnd="@dimen/spacing_normal"
			android:textSize="@dimen/text_large"
			tools:text="/emulater/0/sotrage/downloads/Record-12.wav"/>

	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/rec_created"
			android:textStyle="normal"
			android:fontFamily="sans-serif-light"
			android:textSize="@dimen/text_medium"
			android:layout_marginTop="@dimen/spacing_normal"
			android:layout_marginStart="@dimen/spacing_normal"
			android:layout_marginEnd="@dimen/spacing_normal" />
	<TextView
			android:id="@+id/txt_created"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="start"
			android:textColor="@color/text_primary_light"
			android:layout_marginStart="@dimen/spacing_normal"
			android:layout_marginEnd="@dimen/spacing_normal"
			android:textSize="@dimen/text_large"
			tools:text="22.11.2018, 11:30"/>

</LinearLayout>
